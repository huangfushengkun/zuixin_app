<!--components/search/index.wxml-->
<view class="container">
    <view class="header">
        <view class="search-container">
            <image class="icon" src="images/search.png"></image>
            <input bind:confirm="onConfirm" type="text" placeholder="书籍名" class="bar" auto-focus="{{true}}" />
            <image class="cancel-img" src="images/cancel.png"></image>
        </view>
        <view bind:tap="onCancel" class="cancel">取消</view>
    </view>
    <view>
        <view class="history">
            <view class="title">
                <view class="chunk"></view>
                <text>历史搜索</text>
            </view>
            <view class="tags">
                <block wx:for="{{historyWords}}" wx:key="{{index}}">
                    <h-tag text="{{item}}" />
                </block>
            </view>
        </view>
        <view class="history hot-search">
            <view class="title">
                <view class="chunk"></view>
                <text>热门搜索</text>
            </view>
            <view class="tags">
                <block wx:for="{{hotWords}}" wx:key="{{index}}">
                    <h-tag text="{{item}}" />
                </block>
            </view>
        </view>
    </view>
</view>